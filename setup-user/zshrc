# oh-my-zsh
export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="tiny"
plugins=(git)
source $ZSH/oh-my-zsh.sh

# direnv
eval "$(direnv hook zsh)"

# exports
export GOPATH="$HOME/go"
export PATH="$PATH:$GOPATH/bin"

# go path
mkdir -p $HOME/go/src/github.com/"$USER"

# aliases
alias tmux-pair="tmux -S /tmp/tmux-pair new-session -s pair || tmux -S /tmp/tmux-pair attach-session -t pair"
