# oh-my-zsh
export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="enormous"
plugins=(git)
source $ZSH/oh-my-zsh.sh

# aliases
alias renv="eval \$(tmux show-env -s | grep '^SSH_')"
alias clone="githubclone"

# pull pr alias
function gfpr() {
  local prnum="$1"
  local refspec="pull/$prnum/head:pr$prnum"
  if git config remote.upstream.url; then
    git fetch upstream "$refspec"
  else
    git fetch origin "$refspec"
  fi
}

# go aliases
for dir in $LOCAL_BIN/go/*;
do
  local v=${dir##*/}
  alias "go$v"="$LOCAL_BIN/go/$v/bin/go"
done

# free up the c-q shortcut for use in vim
stty start undef

# run the first run script
[ -f "$DEVENV/firstrun.sh" ] && "$DEVENV/firstrun.sh"

# tty for gpg
export GPG_TTY=$(tty)
